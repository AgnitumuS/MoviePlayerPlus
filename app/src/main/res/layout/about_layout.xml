            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="14sp"
            android:text="技术人员:OuyangJinfu"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="14sp"
            android:text="界面设计:OuyangJinfu"/>
